{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@view/*": ["./src/view/*"],
      "@router/*": ["./src/Router/*"],
      "@assets/*": ["./src/assets/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
